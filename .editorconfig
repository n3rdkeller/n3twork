# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# All
[*]
end_of_line = lf
insert_final_newline = true

# JavaScript Files
[*.js]
indent_style = tab
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2

# Java
[*.java]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = tab
indent_size = 4
